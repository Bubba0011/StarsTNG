<style>
	.env-bar {
		background-color: none;
		border: 1px solid gray;
		width: 100%;
		height: 10px;
		position: relative;
		margin: 1px;
	}

	.env-range {
		position: absolute;
		height: 100%;
		opacity: 0.5;
	}

	.env-value {
		position: absolute;
		height: 100%;
		width: 2px;
	}
</style>

<div>
	<div class="env-bar">
		<div class="env-range" style="@GetRangeStyle("red")"></div>
		<div class="env-value" style="@GetValueStyle(Environment.Gravity, "red")"></div>
	</div>
	<div class="env-bar">
		<div class="env-range" style="@GetRangeStyle("blue")"></div>
		<div class="env-value" style="@GetValueStyle(Environment.Radiation, "blue")"></div>
	</div>
	<div class="env-bar">
		<div class="env-range" style="@GetRangeStyle("green")"></div>
		<div class="env-value" style="@GetValueStyle(Environment.Temperature, "green")"></div>
	</div>
</div>

@code
{
	[Parameter]
	public Stars.Core.Environment Environment { get; set; }

	[Parameter]
	public IPlayer Player { get; set; }

	private string GetRangeStyle(string color, int mid = 50, int range = 40)
	{
		int left = mid - range / 2;
		return $"background-color: {color}; left: {left}%; width:{range}%;";
	}

	private string GetValueStyle(int value, string color)
	{
		return $"background-color: {color}; left: {value}%;";
	}
}
