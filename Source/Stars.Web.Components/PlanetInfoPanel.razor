
<div style="font-size: small;">
	<h5>Planet #@Planet.Id</h5>

	<p><b>Position</b> @Planet.Position.X, @Planet.Position.Y</p>

	@if (Planet.Details != null)
	{
		<p><b>Environment</b> <br/> @Planet.Details?.Environment</p>

		<p><b>Minerals</b> <MineralsPanel Minerals="Planet.Details.Minerals" /></p>
	}
</div>

@code 
{
	[Parameter]
	public IPlanet Planet { get; set; }
}
